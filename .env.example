# 数据库配置 (MySQL)
DATABASE_URL="mysql://root:password@localhost:3306/admin_scaffold"
DATABASE_MAX_CONNECTIONS=10
DATABASE_IDLE_TIMEOUT=20
DATABASE_CONNECT_TIMEOUT=10
AUTO_DB_MIGRATE=false
AUTO_DB_SEED=false
SEED_ADMIN_USERNAME="admin"
SEED_ADMIN_PASSWORD=""
SEED_ADMIN_NICKNAME="超级管理员"

# JWT 配置
JWT_SECRET="your-super-secret-jwt-key-at-least-32-chars"
JWT_EXPIRES_IN="7d"

# 运行环境
NODE_ENV="development"

# 客户端配置
# 注意：生产环境部署时，请设置为实际的域名（如 https://your-domain.com）
# 如果留空，系统会自动检测 Vercel/Railway 等平台的域名
NEXT_PUBLIC_APP_URL="http://localhost:3000"
